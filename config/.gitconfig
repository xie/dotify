[user]
	name = Aditya Sharma
	email = git@adi.run
	signingKey = 9C2F550E36E32C3C

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

[core]
	editor = nano
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol, space-before-tab
	excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX

[commit]
	gpgsign = true
	verbose = true

[web]
	browser = safari

[rerere]
	enabled = 1
	autoupdate = 1

[push]
	default = simple

[color]
	ui = true

[help]
	autocorrect = 1

[credential]
	helper = osxkeychain

[diff]
	renames = copies
  	compactionHeuristic = true
	algorithm = patience

[protocol]
	version = 2

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[branch]
	autosetuprebase = always
	rebase = true

[difftool]
  	prompt = false

[enhancedblame]
  	columnsize = 50

[fetch]
  	prune = true

[log]
  	date = local
  	decorate = true
  	topo-order = true

[push]
  	default = simple

[status]
  	submodulesummary = true

[merge]
	conflictstyle = diff3

[alias]
  # Short command names
  st = status
  co = checkout
  eb = enhanced-blame
  head = rev-parse HEAD
  subup = submodule update --init --recursive
  fpush = push --force-with-lease
  reword = commit --amend
